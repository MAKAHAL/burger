<div class="burgers">
	<img id="burger-image" src="https://image.shutterstock.com/image-vector/hamburger-cartoon-vector-illustration-isolated-600w-257426938.jpg">
	<h2 class="heading">Eat-Da-Burger!</h2>
	<style>
		#burger-image{
			height: 20%;
			width: 20%;
		margin-left: 37%;
		}
		.heading{
			background-color: rgb(226, 193, 102);
			text-align: center;
			height: 30%;
			width: 50%;
			margin-left: 23%;
		}
		
	</style>
  <div class="adder">
<h2>Add a Burger</h2>
<form class="create-form" action="/burgers/create" method="POST">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="enter_text" name="burger_name" value="">
    <button id="text-enter-button"class="btn" type="submit">submit</button>
</form>
  </div>

  
  <style> .btn {
  background-color: red; 
  border: none;
  color: white;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  margin: 4px 2px;
  cursor: pointer;
}
.btn {font-size: 10px;}


  </style>
</form>
</div>
 	<div class="col-md-6 text-center" class="task">
			<div class="row">
				<h3>Burgers to Devour!</h3>
			  {{#each burger_data}}
			  	{{#unless this.devoured}}
				<div class="col-md-9 text-center">
					<pre>{{this.id}}. {{this.burger_name}}
					</pre>
				
				</div>
				<div class="col-md-3 text-center">
					<form class="devour-form button-size">
						<input input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
						<button type="submit" class="btn btn-default">Devour it!</button>
					</form>
				</div>
				{{/unless}}
			  {{/each}}
			</div>
		</div>
		<div class="col-md-6 text-center" class="task">
			<h3>Burgers Devoured!</h3>
			  {{#each burger_data}}
			  	{{#if this.devoured}}
			  		<input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
					  
				{{/if}}
			  {{/each}}
		</div>
	</div>
</div>

